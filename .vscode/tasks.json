{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile all Java files to out/ (CMD)",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "dir /s /b *.java > sources.txt && javac -d out @sources.txt"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$javac"]
    }
  ]
}
